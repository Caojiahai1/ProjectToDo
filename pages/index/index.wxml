<view>
  <view class="topFixedView"  >
    <van-search background="#6491CB" value="{{ value }}" placeholder="请输入搜索关键词" use-action-slot bind:search="onSearch" shape="round">
      <view slot="action" bind:tap="onSearch">搜索</view>
    </van-search>
  </view>
  <!-- <scroll-view class="topFixedView" style="height:54px"></scroll-view> -->
  <view style="margin-top:{{marginTop}}">
    <van-divider contentPosition="left">任务列表</van-divider>
  </view>
  <!-- <view style="height:200px;"> -->
    <van-row wx:for="{{ array }}" custom-class="rowBorder" gutter="0">
      <van-col custom-class="vancol1" span="2"><van-icon name="passed" /></van-col>
      <van-col custom-class="vancol2" span="16"><text>{{item.text}}\n{{item.date}}</text></van-col>
      <van-col custom-class="vancol1" span="6">
      <view style="height:50px"><van-circle
        value="{{ 30 }}"
        layer-color="#eeeeee"
        color="#ee0a24"
        text="30%"
        size="50"/></view></van-col>
    </van-row>
  <!-- </view> -->
  
  <!-- <van-icon class="addTask" name="add" bindtap="addTask" size="50" /> -->
  <!-- <van-button class="addTask" custom-style="border-radius=20px" round="true" type="primary" size="mini">+</van-button> -->
  <cover-view class="addTask" style="background-color:{{taskBgColor}}"
   bindtouchstart="addTask" bindtouchend="moveTask">+</cover-view>
  <!-- <view>
    <input class="weui-input addTaskInput" adjust-position="{{false}}" placeholder="输入"/>
  </view> -->
  <van-cell-group class="addTaskInput"
  style='bottom:{{inputBottom}}px;display:{{inputDisplay}};' >
  <van-field
    custom-style="background-color: #6491CB;padding:8px 5px"
    value="{{ sms }}"
    center
    clearable
    placeholder="请输入"
    adjust-position= "{{false}}"
    bindfocus="inputFocus"
    bindblur="inputblur"
    focus="{{inputShowed}}"
    use-button-slot
  >
    <van-button slot="button" size="small" type="primary" custom-style="background-color:#234678;border:0px">保存</van-button>
  </van-field>
</van-cell-group>
