/**index.wxss**/

.container{
  display: flex;
  flex-direction: column;
}
.addTask {
  position: fixed;
  color: white;
  bottom: 9%;
  right: 2%;
  box-shadow:0 6rpx 10rpx 2rpx #a3a19d99;
  -webkit-box-shadow:0px 3px 3px 1px #a3a19d99; 
  border-radius: 25px;
  height: 50px;
  width: 50px;
  /* background-color: #6491CB; */
  font-size: 50px;
  text-align: center;
  line-height: 40px;
  z-index: 99999;
}
.addTaskInput {
  position: fixed;
  width: 100%;
  border-top: solid 1px rgb(230, 228, 228)
}

