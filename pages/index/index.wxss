/* 顶部搜索框样式，固定在顶部 */
.topFixedView {
  position: fixed;
  top: 0rpx;
  width: 100%;
  display: block;
  margin: 0;
  z-index: 99999;
}


.toolBar{
  background-color: rgb(224, 221, 221);
  border-top: solid 0.5px rgb(219, 218, 218);
}
.toolBarButton{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 45px;
}

/* 任务样式 */
.taskStyle {
  margin: 3px 5px;
  background-color: #fff;
  border-radius: 10px;
}
/* 任务列表第一列 */
.taskList1{
