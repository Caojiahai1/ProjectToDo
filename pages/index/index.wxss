/* 顶部搜索框样式，固定在顶部 */
.topFixedView {
  position: fixed;
  top: 0rpx;
  width: 100%;
  display: block;
  margin: 0;
  z-index: 99999;
}

.toolBar{
  background-color: rgb(240, 236, 236);
  border-top: solid 0.5px rgb(219, 218, 218);
}
.toolBarButton{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 45px;
}

/* 任务样式 */
.taskStyle {
  margin: 3px 5px;
  background-color: #fff;
  border-radius: 10px;
}
/* 任务列表第一列 */
.taskList1{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 55px;
}
/* 任务列表内容 */
.taskList2{
  display: flex;
  align-items: center;
  /* justify-content: center; */
  height: 55px;
  /* margin: 0px; */
}
/* 页面背景色 */
page {
  background-color: rgb(243, 240, 240)
}
/* 新增 */
.todo-today{
  font-size: 15px;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  vertical-align: center;
  margin: 2px;
}
.todo-today1{
  width: 100%;
}
.today-item{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  background-color: #00a2ea;
  border: 10rpx solid white;
  border-radius: 20rpx;
}
.itemdescriptiont{
  flex: 1;
  font-size: 40rpx;
  color: white;
}
.itemdescriptiontcompleted{
  flex: 1;
  text-decoration: line-through;
  font-size: 40rpx;
  color: white;
}
.itemremove{
  cursor: pointer;
  padding-top: 7rpx;
}
.itemcheckbox{
  margin-right: 20rpx;
}